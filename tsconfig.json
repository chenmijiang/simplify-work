{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "sourceMap": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "types/**/*", ".sw-config.ts", "rollup.config.ts"],
  "exclude": ["dist", "node_modules"]
}
