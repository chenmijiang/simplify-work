{
  "compilerOptions": {
    // "declaration": true,
    // "declarationMap": true,
    // "declarationDir": "./dist/types",
    "sourceMap": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", ".sw-config.ts", "rollup.config.ts"],
  "exclude": ["node_modules"]
}
